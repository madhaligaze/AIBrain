<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/space_deepest">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:textColor="@color/cyan_primary"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/et_server_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="http://192.168.1.10:8000/"
            android:inputType="textUri"
            android:textColor="@color/text_white"
            android:textColorHint="@color/text_white_dim" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btn_save_url"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/btn_secondary_cyan"
                android:textColor="@color/text_cyan"
                android:textAllCaps="false"
                android:text="SAVE" />

            <Button
                android:id="@+id/btn_check_health"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/btn_secondary_cyan"
                android:textColor="@color/text_orange"
                android:textAllCaps="false"
                android:layout_marginStart="10dp"
                android:text="HEALTH" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_health"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_white"
            android:text="Health: -"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/tv_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="No saved sessions yet."
            android:textColor="@color/text_white_dim" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btn_copy_latest"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/btn_secondary_cyan"
                android:textColor="@color/text_cyan"
                android:textAllCaps="false"
                android:text="COPY LATEST" />

            <Button
                android:id="@+id/btn_clear_history"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/btn_secondary_cyan"
                android:textColor="@color/text_orange"
                android:textAllCaps="false"
                android:layout_marginStart="10dp"
                android:text="CLEAR" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
