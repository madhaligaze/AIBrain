<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/space_deepest">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/connect_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:textColor="@color/cyan_primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/et_server_url"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="@string/connect_url_hint"
        android:textSize="20sp"
        android:minHeight="56dp"
        android:inputType="textUri"
        android:textColor="@color/text_white"
        android:textColorHint="@color/text_white_dim"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_connect_help"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/connect_help"
        android:textColor="@color/text_white_dim"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/et_server_url"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_connect_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="@string/connect_status_checking"
        android:textSize="18sp"
        android:textColor="@color/text_white_dim"
        android:fontFamily="monospace"
        app:layout_constraintTop_toBottomOf="@id/tv_connect_help"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_check"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/btn_secondary_cyan"
        android:textColor="@color/text_cyan"
        android:textAllCaps="false"
        android:layout_marginTop="16dp"
        android:text="@string/connect_check"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tv_connect_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/btn_secondary_cyan"
        android:textColor="@color/text_cyan"
        android:textAllCaps="false"
        android:layout_marginTop="12dp"
        android:text="@string/connect_continue"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/btn_check"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_settings"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/btn_secondary_cyan"
        android:textColor="@color/text_cyan"
        android:textAllCaps="false"
        android:layout_marginTop="12dp"
        android:text="@string/connect_settings"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/btn_continue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
